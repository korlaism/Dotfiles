[module/load-average]
type = custom/script
exec = uptime | grep -ohe 'load average[s:][: ].*' | awk '{ print $3" "$4" "$5" " }' | sed 's/ ,//g'
interval = 100

label = %output:10%

format-foreground = 
format-background = 
format-prefix = "  "
format-prefix-foreground =  
format-underline = 

